<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/wristwatch"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="50dp"
        android:text="@string/wristwatch1"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
          />

    <ImageView
        android:id="@+id/firstImgInService"
        android:src="@drawable/sdbh1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/wristwatch"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/wristwatchTwo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="50dp"
        android:text="@string/wristwatch2"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/firstImgInService"
        />

    <ImageView
        android:id="@+id/secondImgInService"
        android:src="@drawable/pnjb2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="@id/wristwatchTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/wristwatchThee"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/wristwatch3"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/secondImgInService"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/thirdImgInService"
        android:src="@drawable/pn3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="@id/wristwatchThee"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>